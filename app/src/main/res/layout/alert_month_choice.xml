<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constMonthChoice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_alert_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/radioGroupMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/constMonthButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radio2023"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Ocak"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioFeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Şubat"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioMar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Mart"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioApr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Nisan"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioMay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Mayıs"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioJun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Haziran"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioJul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Temmuz"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioAgu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Ağustos"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioSep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Eylül"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioOct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Ekim"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioNov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Kasım"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radioDec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:text="Aralık"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </RadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constMonthButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupMonth">

            <TextView
                android:id="@+id/textBtYes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/cabin_medium"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Tamam"
                android:textColor="@color/blue_grey_1100"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textBtNo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.483"
                app:layout_constraintWidth_percent=".5" />

            <TextView
                android:id="@+id/textBtNo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/cabin_medium"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Çık"
                android:textColor="@color/blue_grey_1100"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textBtYes"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.483"
                app:layout_constraintWidth_percent=".5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>